<UserControl x:Class="TerminalMonitor.Windows.Controls.TextStyleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TerminalMonitor.Windows.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="800">

    <WrapPanel Name="stkPnlStyle" Grid.Row="1" Grid.Column="1" Orientation="Horizontal">
        <Label Name="lblForeground" Content="Foreground" />
        <Rectangle Name="rctngForeground" Width="10" Height="10" Margin="0, 0, 10, 0" Fill="Black" />
        <Label Name="lblBackground" Content="Background" />
        <Rectangle Name="rctngBackground" Width="10" Height="10" Margin="0, 0, 10, 0" Fill="White" />
    </WrapPanel>
</UserControl>
