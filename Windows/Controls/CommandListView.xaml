<UserControl x:Class="TerminalMonitor.Windows.Controls.CommandListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TerminalMonitor.Windows.Controls"
             xmlns:helpers="clr-namespace:TerminalMonitor.Windows.Helpers"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=local:CommandListViewDataContextVO}"
             d:DesignHeight="250" d:DesignWidth="200">
    <UserControl.Resources>
        <ResourceDictionary>
            <x:Array x:Key="designCommands" Type="local:CommandListItemVO">
                <local:CommandListItemVO Name="Command0" />
                <local:CommandListItemVO Name="Command1" StopButtonVisibility="Visible" />
            </x:Array>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <ListView Name="lstCommands" Grid.Row="1" MinHeight="30" SelectionChanged="LstCommands_SelectionChanged"
                  MouseDown="LstCommands_MouseDown" MouseDoubleClick="LstCommands_MouseDoubleClick"
                  helpers:MouseHorizontalWheelScroller.ScrollingEnabled="True"
                  d:ItemsSource="{StaticResource designCommands}">
            <ListView.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Start" Command="{Binding Path=StartCommand}">
                        <MenuItem.Icon>
                            <Viewbox Width="20" Height="20">
                                <Label Content="▶" Foreground="Green" FontSize="48" />
                            </Viewbox>
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="Stop" Command="{Binding Path=StopCommand}">
                        <MenuItem.Icon>
                            <Viewbox Width="20" Height="20">
                                <Label Content="■" Foreground="Red" FontSize="48" />
                            </Viewbox>
                        </MenuItem.Icon>
                    </MenuItem>
                    <Separator />
                    <MenuItem Header="Edit" Icon="✏" Command="{Binding Path=EditCommand}" />
                    <Separator />
                    <MenuItem Header="Add" Icon="➕" Command="{Binding Path=AddCommand}" />
                    <MenuItem Header="Remove" Icon="➖" Command="{Binding Path=RemoveCommand}" />
                </ContextMenu>
            </ListView.ContextMenu>
            
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                </Style>
            </ListView.ItemContainerStyle>
            
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.Resources>
                            <ResourceDictionary>
                                <Style x:Key="stopWhenRunning" TargetType="Button">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsRunning}" Value="True">
                                            <Setter Property="Visibility" Value="Hidden" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ResourceDictionary>
                        </Grid.Resources>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" VerticalAlignment="Center" Text="{Binding Name}" />
                        <Button Name="btnStop" Grid.Column="2" Width="24" Height="24" Content="■" ToolTip="Stop" Tag="{Binding Id}" Click="BtnStop_Click"
                                Style="{StaticResource buttonIcon}" Foreground="Red" Visibility="{Binding StopButtonVisibility}" />
                        <Button Name="btnStart" Grid.Column="3" Width="24" Height="24" Content="▶" ToolTip="Start" Tag="{Binding Id}" Click="BtnStart_Click"
                                Style="{StaticResource buttonIcon}" Foreground="Green" />
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        
        <WrapPanel Grid.Row="0" Orientation="Horizontal">
            <Button Name="btnAdd" Width="24" Content="➕" ToolTip="Add" Command="{Binding Path=AddCommand}"
                    Style="{StaticResource buttonIcon}" />
            <Button Name="btnRemove" Width="24" Content="➖" ToolTip="Delete" Command="{Binding Path=RemoveCommand}"
                    Style="{StaticResource buttonIcon}" />
            <Button Name="btnEdit" Width="24" Content="✏" ToolTip="Edit" Command="{Binding Path=EditCommand}"
                    Style="{StaticResource buttonIcon}" />
            <Button Name="btnMoveUp" Width="24" Content="↑" ToolTip="Move Up" Command="{Binding Path=MoveUpCommand}"
                    Style="{StaticResource buttonIcon}" />
            <Button Name="btnMoveDown" Width="24" Content="↓" ToolTip="Move Down" Command="{Binding Path=MoveDownCommand}"
                    Style="{StaticResource buttonIcon}"/>
        </WrapPanel>
        
    </Grid>
</UserControl>
